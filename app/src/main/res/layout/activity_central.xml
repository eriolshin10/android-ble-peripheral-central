<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="READ"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/textview_read"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/title_read"
        app:layout_constraintStart_toStartOf="@id/title_read"
        app:layout_constraintEnd_toStartOf="@id/button_read"/>
    <Button
        android:id="@+id/button_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="READ"
        app:layout_constraintTop_toTopOf="@id/textview_read"
        app:layout_constraintBottom_toBottomOf="@id/textview_read"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/title_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WRITE"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textview_read"
        app:layout_constraintStart_toStartOf="@id/textview_read"
        app:layout_constraintEnd_toEndOf="parent" />
    <EditText
        android:id="@+id/edittext_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/title_write"
        app:layout_constraintStart_toStartOf="@id/title_write"
        app:layout_constraintEnd_toStartOf="@id/button_write"/>
    <Button
        android:id="@+id/button_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WRITE"
        app:layout_constraintTop_toTopOf="@id/edittext_write"
        app:layout_constraintBottom_toBottomOf="@id/edittext_write"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/title_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOTIFY"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edittext_write"
        app:layout_constraintStart_toStartOf="@id/edittext_write"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/textview_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/title_notify"
        app:layout_constraintTop_toBottomOf="@id/title_notify" />

</android.support.constraint.ConstraintLayout>